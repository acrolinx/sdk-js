{
  "name": "acrolinx-api",
  "version": "0.1.1",
  "description": "Acrolinx JavaScript SDK for the Acrolinx API",
  "license": "Apache-2.0",
  "author": "Acrolinx",
  "url": "https://www.acrolinx.com",
  "repository": "https://github.com/acrolinx/acrolinx-api-js",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "engines": {
    "node": ">=8.9.4"
  },
  "scripts": {
    "ci": "npm run build && npm run tslint && npm run testCoverage",
    "ciWithoutIntegrationServerTest": "npm run build && npm run tslint && npm run testUnitCoverage",
    "clean": "rm -rf dist",
    "prepare": "npm run generateSchemas && tsc",
    "generateSchemas": "npm run generateSchemaCheckResult && npm run generateSchemasTermHarvestingReport",
    "generateSchemaCheckResult": "typescript-json-schema --required --strictNullChecks src/check.ts CheckResult > test/schemas/check-result.json",
    "generateSchemasTermHarvestingReport": "typescript-json-schema --required --strictNullChecks src/check.ts TermHarvestingReport > test/schemas/term-harvesting-report.json",
    "build": "tsc",
    "runExample": "tsc && node dist/examples/get-server-version.js",
    "runExampleSignin": "tsc && node dist/examples/signin.js",
    "runExampleGetCheckingCapabilitites": "tsc && node dist/examples/get-checking-capabilities.js dummyToken",
    "runExampleCheck": "tsc && node dist/examples/check.js https://test-latest-ssl.acrolinx.com eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJzdWIiOiJhcGktanMtdGVzdC11c2VyIiwiYXVkIjoiYWNyb2xpbng6OTk4ODhjZDE1YjM5YTUyMCIsIm5iZiI6MTUxNzgzODc5NywiaXNzIjoiYWNyb2xpbng6OTk4ODhjZDE1YjM5YTUyMDplYzljZGRlMjNiMjUzZGM3IiwiZXhwIjoxNjQ0MDY5MTk3LCJ0b2tlblR5cGUiOiJhcGkiLCJpYXQiOjE1MTc5MjUxOTcsImp0aSI6IjMxY2FhNWI2NjhhNjdiZDk2MDhkMTM4M2RlNzRkNmM5In0.wtiefF9mHqe_N6BzXqT7PucSMWs3lwq2xla_x8KYGWE",
    "runExampleCheckMocked": "tsc && node dist/examples/check.js http://localhost:3000 dummyAuthToken",
    "runMockServer": "tsc && node dist/test/test-utils/mock-server-http.js",
    "test": "jest",
    "testCoverage": "jest --coverage",
    "testUnit": "jest unit",
    "testUnitCoverage": "jest unit --coverage",
    "testIntegrationServer": "jest integration-server",
    "testIntegrationServerCoverage": "jest integration-server --coverage",
    "tscWatch": "tsc -w",
    "tslint": "tslint -p tsconfig.json",
    "tslintFix": "tslint -p tsconfig.json --fix"
  },
  "devDependencies": {
    "@types/co-body": "^0.0.3",
    "@types/dotenv": "^6.1.1",
    "@types/fetch-mock": "^7.2.3",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/node": "^10.14.4",
    "ajv": "^6.10.0",
    "co-body": "^6.0.0",
    "cross-fetch": "^3.0.2",
    "dotenv": "^7.0.0",
    "fetch-mock": "^7.3.1",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "lodash": "^4.17.11",
    "ts-jest": "^24.0.2",
    "tslint": "5.11.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.4.2",
    "typescript-json-schema": "^0.37.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageDirectory": "tmp/coverage",
    "coverageReporters": [
      "cobertura",
      "json",
      "lcov",
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testURL": "http://localhost/"
  },
  "jest-junit": {
    "output": "tmp/junit.xml"
  }
}
