{
  "extends": [
    "tslint:recommended",
    "tslint-sonarts",
    "tslint-no-circular-imports"
  ],
  "linterOptions": {
    "exclude": [
      "**/*.json"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "interface-name": false,
    "arrow-parens": false,
    "trailing-comma": false,
    "max-classes-per-file": 10,
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "no-floating-promises": true,
    "object-literal-sort-keys": false,
    "prefer-template": [
      true,
      "allow-single-concat"
    ],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^.*//.*https://"
      }
    ]
  }
}
